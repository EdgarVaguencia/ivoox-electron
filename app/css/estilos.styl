@import 'icons-fonts.styl'

$bgcolor_1 = #EFEFEF
$bgcolor_2 = #FF9800
$bgcolor_3 = #FF5722
$txt_1 = #424242

body
  color $txt_1
  background #FAFAFA
  margin 0
  font-size 13px

ul
  list-style none
  padding-left 0

.app
  position absolute
  top 0
  bottom 0
  left 0
  overflow hidden
  right 0

.audio-view
  background $bgcolor_1
  border-radius 5px
  box-shadow 0 2px 2px 0 rgba(0,0,0,.14), 0 3px 1px -2px rgba(0,0,0,.2), 0 1px 5px 0 rgba(0,0,0,.12)
  display flex
  flex-direction column
  position relative
  margin 10px 13px
  width 160px
  overflow hidden
  .audio-cover
    background white
    cursor pointer
    height 160px
    position relative
    &:hover
      > .cover-play
        display block
    .cover-play
      background url('../media/26282b_Play_256px.png') no-repeat center
      background-size 70%
      bottom 0
      left 0
      opacity 0.75
      position absolute
      right 0
      top 0
      display none
      &:hover
        display block
    img
      height 160px
      width 160px
  .audio-info
    padding 8px

.btn-control
  display inline-block
  vertical-align bottom

.content
  flex 1
  overflow-y auto
  padding 8px 30px 8px 8px
  position relative

.main
  bottom 55px
  display flex
  overflow hidden
  overflow-y auto
  position absolute
  top 0
  left 0
  right 0

.page-content
  display flex
  flex-flow row wrap

.player
  background $bgcolor_2
  bottom 0
  box-shadow 0 -2px 2px 0 rgba(0,0,0,.14), 0 -3px 1px -2px rgba(0,0,0,.2), 0 -1px 5px 0 rgba(0,0,0,.12)
  font-size 18px
  height 55px
  position absolute
  width 100%
  padding 0 5px
  .btn-control
    font-size 24px !important
    line-height 60px
    vertical-align top
    span
      cursor pointer
      margin 0 3px
      &.repeat, &.shuffle
        font-size 17px
  .current-track
    display inline-block
    height 100%
    width 80%
    picture
      img
        width 45px
        height 45px
        padding 5px 0
    .info
      display inline-block
      margin 5px 10px
      vertical-align top
      span
        display block
        font-size 13px
        &.title
          font-size 18px

.highlith
  background #FFCC00

.other
  background #FEE5B1

.sidebar
  background $bgcolor_2
  box-shadow 1px 0 2px 0 rgba(0,0,0,.14), 2px 0 1px -2px rgba(0,0,0,.2), 2px 0 5px 0 rgba(0,0,0,.12)
  flex 1
  font-size 17px
  min-width 100px
  max-width 120px
  overflow-y auto
  .side-button
    cursor pointer
    padding 9px 12px
    &.active, &:hover
      background $bgcolor_3
